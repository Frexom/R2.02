<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">

    <persistence-unit name="br.com.fredericci.pu">
        <description>Hibernate EntityManager Demo</description>
        <class>iut.gon.TP6.Customer</class>
        <class>iut.gon.TP6.Element</class>
        <class>iut.gon.TP6.Facture</class>
        <class>iut.gon.TP6.Ligne</class>
        <class>iut.gon.TP6.LignePrestation</class>
        <class>iut.gon.TP6.LigneProduit</class>
        <class>iut.gon.TP6.Produit</class>
        <class>iut.gon.TP6.Prestation</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:./my_database"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>
        </properties>
    </persistence-unit>

</persistence>